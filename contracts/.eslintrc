{
  "extends": [
      "xo",
      "xo/esnext"
  ],
  "env": {
      "node": true
  },
  "plugins": [
      "babel"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "rules": {
      "valid-jsdoc": 2,
      "indent": ["error", 2, {
          "SwitchCase": 1
      }],
      "arrow-parens": ["error", "always"],
      "capitalized-comments": "off",
      "default-case": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true } }],
      "no-else-return": ["error", {"allowElseIf": true}],
      "max-params": ["error", 5]
  }
}
